.card {
  margin-top: 15vh;
  width: 90%;
  height: 25vh;
  margin-left: 5%;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px #a0a0a0;
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  align-items: center;
  /* padding: 5px; */
  /* border: 1px solid #96e5b7; */
}

.iconfont {
  position: absolute;
  font-size: 10vw;
  top: 50%;
  left: 30%;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  z-index: 9999;
}

.button1 {
  background: linear-gradient(to right, #a296e5, #95edf8);
  color: #fff;
  box-shadow:0px 0px 4px #999 inset;
}

.button1::after {
  border: none;
}

.container1 {
  position: relative;
  background:none ;
  height: 100vh;
  /* padding: 10px; */
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
}
.container2 {
  height: 100vh;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
}
.aa {
  position: absolute;
  width: 100%;
  height: 100vh;
  z-index: -99;
  -webkit-filter:blur(5px);
  -moz-filter:blur(5px);
  -o-filter:blur(5px);
  -ms-filter:blur(5px);
  filter:blur(5px);
}
